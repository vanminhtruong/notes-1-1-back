# Environment variables example

# Server Configuration
PORT=3000
NODE_ENV=development

# Database
SQLITE_STORAGE=data/app.sqlite

# Logging
SEQUELIZE_LOG=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Client Configuration
CLIENT_URL=http://localhost:5173

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# SMTP (Email Sending)
# Fill these to enable real email sending. If left empty or nodemailer not installed,
# the app will log emails to the console for development.
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=9cc42726b49f46
SMTP_FROM="Your App <no-reply@example.com>"
